<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <FrameLayout
        android:id="@id/fl_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/details_works_imag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_woman"
            android:visibility="gone"
            android:adjustViewBounds="true"
            />
        <View
            android:id="@id/view_image"
            android:layout_width="wrap_content"
            android:layout_height="55dp"/>
    </FrameLayout>


    <!--描述，笔画-->
    <LinearLayout
        android:id="@id/details_ll_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_image"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:id="@id/ll_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@id/details_dex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:maxLines="2"
                android:lineSpacingExtra="3dp"
                android:ellipsize="end"
                android:enabled="true"
                android:textColor="@color/gary3"/>
        </LinearLayout>
        <TextView
            android:id="@id/details_worksStrokes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gary3"/>
    </LinearLayout>
    <!--标签-->
    <LinearLayout
        android:id="@id/details_ll_lebel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_ll_des"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@id/details_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/white"
            android:background="@drawable/details_label_bg_shape"/>
        <TextView
            android:id="@id/details_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@drawable/details_label_bg_shape"/>
        <TextView
            android:id="@id/details_label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@drawable/details_label_bg_shape"/>
    </LinearLayout>
    <!--用户信息-->
    <RelativeLayout
        android:id="@id/details_ll_userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/details_ll_lebel"
        android:layout_alignParentStart="true">
        <z.pint.view.CuttingImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@id/details_userHead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/default_head_image"
            app:border_width="0dp"
            app:border_color="@color/transparent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/details_userHead">
            <TextView
                android:id="@id/details_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@id/details_worksTims"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textColor="@color/gary2"
                />
        </LinearLayout>
        <ImageView
            android:id="@id/details_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/follow"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_below="@id/details_ll_userInfo"
        android:layout_marginTop="5dp"
        android:background="@color/gary4"/>



</RelativeLayout>
