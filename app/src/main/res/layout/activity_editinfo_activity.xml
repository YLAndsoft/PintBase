<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/gary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/edit_toBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/top_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="17dp"
            android:textColor="@color/gary3"
            android:text="我的资料"/>

        <TextView
            android:id="@+id/edit_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:textSize="15dp"
            android:text="保存"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gary3"
                android:textSize="16dp"
                android:text="头像"/>

            <z.pint.view.CuttingImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/edit_info_userHead"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/edit_right1"
                android:layout_centerVertical="true"
                android:src="@mipmap/default_head_image"
                app:border_width="0dp"
                app:border_color="@color/transparent"/>

            <ImageView
                android:id="@+id/edit_right1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/edit_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gary3"
                android:textSize="16dp"
                android:text="昵称"/>

            <TextView
                android:id="@+id/edit_info_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/edit_right2"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:text="小酒窝长睫毛"/>
            <ImageView
                android:id="@+id/edit_right2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/edit_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gary3"
                android:textSize="16dp"
                android:text="性别"/>

            <TextView
                android:id="@+id/edit_info_userSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/edit_right3"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:text="男"/>
            <ImageView
                android:id="@+id/edit_right3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/edit_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gary3"
                android:textSize="16dp"
                android:text="地区"/>

            <TextView
                android:id="@+id/edit_info_userAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/edit_right4"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:text="火星"/>
            <ImageView
                android:id="@+id/edit_right4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/edit_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gary3"
                android:textSize="16dp"
                android:text="签名"/>

            <TextView
                android:id="@+id/edit_info_userSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/edit_right5"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:text="什么都没说"/>
            <ImageView
                android:id="@+id/edit_right5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/edit_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
