<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/comment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <z.pint.view.CuttingImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/comment_userhead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/default_head_image"
            app:border_color="@color/transparent"
            app:border_width="0dp" />
        <LinearLayout
            android:id="@+id/comment_ll_userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/comment_userhead"
            android:orientation="vertical">
            <TextView
                android:id="@+id/comment_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gary2"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/comment_tims"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gary1"
                android:textSize="12dp" />

        </LinearLayout>
        <TextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/comment_ll_userInfo"
            android:layout_toRightOf="@+id/comment_userhead"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gary3"/>

    </RelativeLayout>

